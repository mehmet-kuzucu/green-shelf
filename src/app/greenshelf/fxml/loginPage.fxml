            <Image url="@../images/logo-modified.png" />
         </image>
      </ImageView>
      <TextField fx:id="usernameField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="50.0" prefWidth="500.0" promptText="username / phone" />
