<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="540.0" prefWidth="959.0" style="-fx-background-color: #2e344b;" stylesheets="@../css/Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.greenshelf.controllers.customerHomeController">
   <top>
      <BorderPane style="-fx-background-color: #2A6D72;" BorderPane.alignment="TOP_LEFT">
         <left>
            <Text fx:id="welcomeText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Merhaba, Şafak" BorderPane.alignment="CENTER_LEFT">
               <font>
                  <Font size="23.0" />
               </font>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </Text>
         </left>
         <padding>
            <Insets left="25.0" right="25.0" />
         </padding>
         <center>
            <ImageView fitHeight="75.0" fitWidth="81.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" x="10.0" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@../images/logo-modified.png" />
               </image>
               <BorderPane.margin>
                  <Insets bottom="10.0" right="30.0" top="10.0" />
               </BorderPane.margin>
               <viewport>
                  <Rectangle2D />
               </viewport>
            </ImageView>
         </center>
         <right>
            <ImageView fx:id="profilePhotoImage" fitHeight="100.0" fitWidth="50.0" onMouseClicked="#profilePhotoImageOnMouseClicked" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@../images/defaultProfilePicture.png" />
               </image>
            </ImageView>
         </right>
      </BorderPane>
   </top>
   <bottom>
      <BorderPane>
         <left>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Total price: 19.99₺" BorderPane.alignment="CENTER">
               <font>
                  <Font size="31.0" />
               </font>
            </Text>
         </left>
         <right>
            <Button fx:id="shoppingCartButton" mnemonicParsing="false" onMouseClicked="#shoppingCartButtonButtonOnMouseClicked" />
         </right>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </BorderPane>
   </bottom>
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" pannable="true" style="-fx-border-color: #000000;" BorderPane.alignment="CENTER">
         <content>
            <TilePane hgap="20.0" style="-fx-background-color: #2c344b;" vgap="20.0">
               <children>
                  <Group fx:id="productGroup">
                     <children>
                        <VBox id="productInfo" alignment="CENTER" prefHeight="400.0" prefWidth="200.0" spacing="15.0" stylesheets="@../css/Style.css">
                           <children>
                              <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../images/domates.jpeg" />
                                 </image>
                              </ImageView>
                              <VBox id="deneme" alignment="CENTER" spacing="5.0" stylesheets="@../css/Style.css">
                                 <children>
                                    <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Domates" />
                                    <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="25,00₺" />
                                 </children>
                              </VBox>
                              <Spinner fx:id="spinner" amountToStepBy="0.1" editable="false" max="20.0" min="1.0" />
                              <Button fx:id="addToCartButton" mnemonicParsing="false" />
                           </children>
                        </VBox>
                     </children>
                  </Group>
               </children>
               <padding>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </padding>
            </TilePane>
         </content>
      </ScrollPane>
   </center>
